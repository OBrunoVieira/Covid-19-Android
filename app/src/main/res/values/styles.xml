    </style>

    <style name="World.TextView.CountryCases" parent="Base.TextView.SemiBold">
        <item name="android:textSize">@dimen/text_size_sixteen</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">end</item>
        <item name="android:minWidth">@dimen/world_fragment_cases_min_width</item>
    </style>

    <style name="World.TextView.Badge" parent="Base.TextView.Bold">
        <item name="android:background">@drawable/shape_badge</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/spacing_two</item>
        <item name="android:textSize">@dimen/text_size_eight</item>
        <item name="android:minWidth">@dimen/country_item_badge_min_width</item>
        <item name="android:minHeight">@dimen/country_item_badge_min_height</item>
    </style>

    <!--  News Fragment  -->
    <style name="News.TextView.Title" parent="Base.TextView.Regular">
        <item name="android:textSize">@dimen/text_size_twenty_four</item>
        <item name="android:text">@string/news_title</item>
