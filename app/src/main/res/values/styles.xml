    <style name="News.TextView.Item.PublishAt" parent="Base.TextView.Regular">
        <item name="android:textSize">@dimen/spacing_eleven</item>
        <item name="android:text">@string/news_title</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginTop">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginBottom">@dimen/spacing_sixteen</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/spacing_four</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">@dimen/news_fragment_publish_at_text_min_width</item>
