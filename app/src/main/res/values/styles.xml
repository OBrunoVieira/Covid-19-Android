        <item name="android:textSize">@dimen/text_size_twenty_four</item>
        <item name="android:text">@string/world_title</item>
    </style>

    <style name="World.TextView.CountryName" parent="Base.TextView.Regular">
        <item name="android:textSize">@dimen/text_size_sixteen</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
