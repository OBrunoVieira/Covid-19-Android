        <item name="android:text">@string/news_empty_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_twenty_four</item>
    </style>

    <style name="News.TextView.Item.Title" parent="Base.TextView.SemiBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginTop">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sixteen</item>
        <item name="android:ellipsize">end</item>
